<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/stylesheets/assets/img/favicon.ico">
    <title>Preclinic - Medical & Hospital </title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/assets/css/style.css">
    <!-- if lt IE 9]> -->
		<script src="/stylesheets/assets/js/html5shiv.min.js"></script>
		<script src="/stylesheets/assets/js/respond.min.js"></script>
	<!-- <![endif]-->
</head>

<body>
    <div class="main-wrapper  account-wrapper">
        <div class="account-page">
            <div class="account-center">
                <div class="account-box">
                    <form class="form-signin" method ="POST" action="/doctor/register" enctype="multipart/form-data">
						<div class="account-logo">
                            <img src="/stylesheets/assets/img/logo-dark.png" alt="">
                        </div>
                        <div class="form-group">
                            <% if(locals.error){ %>
                                <% if(error === "DoctorsName is not allowed to be empty"){%>
                                <div style ="
                                color: red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                >Full Name is empty</div>
                                <%}%>
                            <% } %>
                            
                            <label>Full Name</label>
                            <input type="text" name = "DoctorsName" class="form-control">
                            <% if(locals.error){ %>
                                <% if(error === "email is not allowed to be empty"){%>
                                <div style ="
                                color: rgb(243, 68, 97);
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                >Email is empty</div>
                                <%}%>
                            <% } %>
                            <!-- <% if(locals.error){ %>
                                
                                <div style ="
                                color: red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                >Email already exist</div>
                               
                            <% } %> -->
                            <label>Email Address</label>
                            <input type="email" name ="email" class="form-control">
                                <%if(locals.error){%>
                                <%if(error === "phoneNumber is not allowed to be empty")
                                {%> <div style ="
                                color:red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold; "
                                >Phone Number is empty</div>
                                <% }%>
                                <%}%>
                                <!-- <% if(locals.error){ %>
                                    <div style ="
                                    color: red;
                                    margin:10px 2px;
                                    font-size:0.8rem;
                                    font-weight: bold;"
                                    >Phone Number already exist</div>
                                   
                                <% } %>
                                 -->
                            <label>Phone Number</label>

                            
                            <input type="text" name = "phoneNumber"class="form-control">
                            <% if(locals.error){ %>
                                <% if(error === "gender is not allowed to be empty"){%>
                                <div style ="
                                color: red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                >Gender is empty</div>
                                <%}%>
                            <% } %>
                            <label>Gender</label>
                            <select class="form-control" name="gender"id="gender">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                               
                            </select>
                            <% if(locals.error){ %>
                                <% if(error === "specialization is not allowed to be empty"){%>
                                <div style ="
                                color: red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                >Specialization is empty</div>
                                <%}%>
                            <% } %>

                            <label>Specialization</label>
                            <select class="form-control" name="specialization"id="specialization">
                                <option value="Gynaecology">Gynaecology</option>
                                <option value="Radiology">Radiology</option>
                                <option value="Oncology">Oncology</option>
                                <option value="Dermatology">Dermatology</option>
                                <option value="Urology">Urology</option>
                                <option value="Cardiology">Cardiology</option>
                                <option value="Psychiatry">Psychiatry</option>
                                <option value="Neurology">Neurology</option>
                                </select>
                            

                            <% if(locals.error){%>
                                <% if(error === "password is not allowed to be empty"){%>
                                <div style ="
                                color: red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                >Password is empty</div>
                                <%}%>
                            <% } %>
               
                            <label>Password</label>
                            <input type="password" name="password"class="form-control">
                       
                            <% if(locals.error){ %>
                                <% if(error === "Confirm password does not match"){%>
                                <div style ="
                                color: red;
                                margin:10px 2px;
                                font-size:0.8rem;
                                font-weight: bold;"
                                ><%=error%></div>
                                <%}%>
                            <% } %>
                            <label>Confirm Password</label>
                            <input type="password" name="confirm_password"class="form-control">
                            <label for="formFileSm" class="form-label">Select image</label>
                            <input class="form-control form-control-sm" name="image" id="formFileSm" type="file">
                        </div>
                       
                        <div class="form-group text-center">
                            <button class="btn btn-primary account-btn" type="submit">Signup</button>
                        </div>
                        <div class="text-center login-link">
                            Already have an account? <a href="/">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/stylesheets/assets/js/jquery-3.2.1.min.js"></script>
	<script src="/stylesheets/assets/js/popper.min.js"></script>
    <script src="/stylesheets/assets/js/bootstrap.min.js"></script>
    <script src="/stylesheets/js/app.js"></script>
</body>


