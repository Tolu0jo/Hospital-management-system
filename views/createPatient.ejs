	<![endif]-->
</head>

<body>
    <div class="main-wrapper">
        <div class="header">
			<div class="header-left">
				<a href="/dashboard" class="logo">
					<img src="/stylesheets/assets/img/logo.png" width="35" height="35" alt=""> <span>Preclinic</span>
				</a>
			</div>
			<a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
              
               
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img"><img class="rounded-circle" src="/stylesheets/assets/img/user.jpg" width="40" alt="Admin">
							</span>
                        <span>Doctor</span>
                    </a>
					<div class="dropdown-menu">
						<a class="dropdown-item" href="/doctor/logout">Logout</a>
					</div>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu float-right">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                  
                   
                    <a class="dropdown-item" href="/doctor/logout">Logout</a>
                </div>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">Main</li>
                        <li>
                            <a href="/dashboard"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a>
                        </li>
						<li>
                            <a href="/allPatients"><i class="fa fa-wheelchair"></i> <span>All Patients</span></a>
                        </li>
                        <li class="active">
                            <a href="/patients"><i class="fa fa-wheelchair"></i> <span>Patients</span></a>
                        </li>
                        <li >
                            <a href="/allDoctors"><i class="fa fa-user-md"></i> <span>Doctors</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Add Patient</h4>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="col-lg-8 offset-lg-2">
                        <form method ="POST" action ="/patient/create">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "patientName is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label>Full Name <span class="text-danger">*</span></label>
                                        <input class="form-control" name="patientName" type="text">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "age must be number"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            >Age is required</div>
                                            <%}%>
                                        <% } %>
                                        <label>Age<span class="text-danger">*</span></label>
                                        <input class="form-control" name ="age"type="number">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "bloodGroup is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label for="bloodGroup">Blood Group <span class="text-danger">*</span></label>
                                        <select class="form-control" name="bloodGroup"id="genotype">
                                            <option value="O-">O-</option>
                                            <option value="O+">O+</option>
                                            <option value="A-">A-</option>
                                            <option value="A+">A+</option>
                                            <option value="B-">B-</option>
                                            <option value="A+">A+</option>
                                            <option value="AB-">AB-</option>
                                            <option value="AB+">AB+</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "bloodPressure is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label>Blood Pressure <span class="text-danger">*</span></label>
                                        <input class="form-control" name="bloodPressure"type="text">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "weight is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label> Weight<span class="text-danger">*</span></label>
                                        <input class="form-control" name="weight"type="text">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "height is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label>Height<span class="text-danger">*</span></label>
                                        <input class="form-control" name="height"type="text">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "genotype is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label for="genotype">Genotype<span class="text-danger">*</span></label>
                                        <select class="form-control" name="genotype"id="genotype">
                                            <option value="AA">AA</option>
                                            <option value="AS">AS</option>
                                            <option value="AC">AC</option>
                                            <option value="SS">SS</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "hepatitis is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label>Hepatitis<span class="text-danger">*</span></label>
                                        <select class="form-control" name="hepatitis"id="hepatitis">
                                            <option value="A">A</option>
                                            <option value="B">B</option>
                                            <option value="C">C</option>
                                            <option value="D">D</option>
                                            <option value="E">E</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <% if(locals.error){ %>
                                            <% if(error === "HIV_status is not allowed to be empty"){%>
                                            <div style ="
                                            color: red;
                                            margin:10px 2px;
                                            font-size:0.8rem;
                                            font-weight: bold;"
                                            ><%=error%></div>
                                            <%}%>
                                        <% } %>
                                        <label for="HIV_status">HIV Status<span class="text-danger">*</span></label>
                                        <select class="form-control" name="HIV_status" id="HIV_status">
                                            <option value="Negative">Negative</option>
                                            <option value="Positive">Positive</option>
                                        </select>
                                        <!-- <input class="form-control" name="HIV_status" type="text"> -->
                                    </div>
                                </div>
                                
							
           
                            <div class="m-t-20 text-center">
                                <button type="submit"class="btn btn-primary submit-btn">Create Patient</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
			
        </div>
    </div>
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/stylesheets/assets/js/jquery-3.2.1.min.js"></script>
	<script src="/stylesheets/assets/js/popper.min.js"></script>
    <script src="/stylesheets/assets/js/bootstrap.min.js"></script>
    <script src="/stylesheets/assets/js/jquery.slimscroll.js"></script>
    <script src="/stylesheets/assets/js/select2.min.js"></script>
	<script src="/stylesheets/assets/js/moment.min.js"></script>
	<script src="/stylesheets/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/stylesheets/assets/js/app.js"></script>
</body>


