                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Edit Patient</h4>
                    </div>
                </div>
                <div class="row"> 
                    <div class="col-lg-8 offset-lg-2">
                        <form method ="POST" action ="/patient/updatePatient/<%=patient._id%>">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Full Name <span class="text-danger">*</span></label>
                                        <input class="form-control" name="patientName" type="text" placeholder="" value="<%=patient.patientName%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                
                                        <label>Age<span class="text-danger">*</span></label>
                                        <input class="form-control" name ="age"type="number"placeholder="" value="<%=patient.age%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
            
                                        <label>Blood Group <span class="text-danger">*</span></label>
                                        <input class="form-control" name="bloodGroup" type="text"placeholder="" value="<%=patient.bloodGroup%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Blood Pressure <span class="text-danger">*</span></label>
                                        <input class="form-control" name ="bloodPressure" type="text"placeholder="" value="<%=patient.bloodPressure%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group"> 
                                        <label> Weight<span class="text-danger">*</span></label>
                                        <input class="form-control" name="weight"type="text"placeholder="" value="<%=patient.weight%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                      
                                        <label>Height<span class="text-danger">*</span></label>
                                        <input class="form-control" name="height"type="text" placeholder="" value="<%=patient.patientName%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                      
                                        <label>Genotype<span class="text-danger">*</span></label>
                                        <input class="form-control" name="genotype" type="text" placeholder="" value="<%=patient.genotype%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                       
                                        <label>Hepatitis<span class="text-danger">*</span></label>
                                        <input class="form-control" name="hepatitis" type="text" placeholder="" value="<%=patient.hepatitis%>"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                     
                                        <label>HIV Status<span class="text-danger">*</span></label>
                                        <input class="form-control" name="HIV_status" type="text" placeholder="" value="<%=patient.HIV_status%>"/>
                                    </div>
                                </div>
                                
							
           
                            <div class="m-t-20 text-center">
                                <button type="submit"class="btn btn-primary submit-btn"> Edit Patient</button>
                            </div>
                        </form>
